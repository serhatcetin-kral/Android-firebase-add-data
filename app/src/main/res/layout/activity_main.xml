<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edt_veri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter your word which one you send"
        android:scrollbarSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="40dp"/>
    <Button
        android:id="@+id/btn_verigonder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="send"
        android:layout_marginTop="40dp"
        />

    <EditText
        android:id="@+id/edt_veri_goster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="gosterilecek data"
        android:scrollbarSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:paddingLeft="40dp"/>
    <Button
        android:id="@+id/btn_verigoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="fetch"
       android:background="#1DAE13"
        android:layout_marginTop="40dp"
        />

</LinearLayout>